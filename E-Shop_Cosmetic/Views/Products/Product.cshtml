@model Product

<section class="product">
    <div class="container">
        <hr class="line-bold" />
        <div class="product-info">
            <h1 class="product-info__header">@Model.Name</h1>
        </div>
        <hr />
        <div class="offer">
            <div class="offers-figure" style="padding: 25px;">
                <img src="@Model.ImageURL"/>
            </div>
            <div class="offer-info">
                <div class="offer-info__description">
                    <h2>Описание</h2>
                    <h3>
                        @Model.ShortDescription
                        Lorem, ipsum, dolor sit amet consectetur adipisicing elit. Ratione culpa tenetur
                        
                    </h3>
                    <p>
                        @Model.LongDescription
                        ipsam odio nulla architecto nesciunt minus suscipit aperiam rerum, fuga officia
                        vero laboriosam a sunt nemo voluptas itaque nobis quo quidem! Rerum ut vitae voluptatum
                        temporibus exercitationem odit fugit cumque molestias ab inventore, debitis harum
                        quisquam voluptas
                    </p>
                </div>
                <div class="offer-footer">
                    <div class="offer-footer__btn">
                        <button class="btn btn-primary" id="btn_add_product">В корзину</button>
                    </div>
                    <div class="offer-footer__btn">
                        <button class="btn btn-primary" id="btn_del_product">В корзину</button>
                    </div>
                    <p class="offer-footer__cost">@Model.Price р.</p>
                </div>
            </div>
        </div>
        <hr />
        @if (User.IsInRole("admin"))
        {
            <section>
                <h3 style="text-align:center;padding-top:10px;">Хотите что-нибудь поменять?</h3>
                <div class="btn-block">
                    <a href="/Products/UpdateProduct/@Model.Id">
                        <button class="btn btn-primary">
                            <p class="btn-text">Изменить</p>
                        </button>
                    </a>
                    <a href="/Products/DeleteProduct/@Model.Id">
                        <button class="btn btn-primary">
                            <p class="btn-text">Удалить</p>
                        </button>
                    </a>
                </div>
            </section>
        }
    </div>
</section>
