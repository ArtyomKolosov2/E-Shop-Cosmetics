@model ProductsViewModel
<h1>Вся косметика</h1>
<h3>@Model.ProductCategory</h3>

<div class="row mt-5 mb-2">

    <div class="cards">
        @{
            foreach (var product in Model.GetProducts)
            {
                @await Html.PartialAsync("ShowProduct", product)
            }
        }
    </div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="AddProduct" asp-controller="Products">
            <button class="btn btn-primary">
                <p class="btn-text">Add</p>
            </button>
        </a>
    }
</div>


