@model E_Shop_Cosmetic.Data.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<section class="delete-product">
    <h3>Вы правда хотите удалить это?</h3>
    <form asp-action="DeleteProduct" asp-controller="Products" asp-antiforgery="true" class="form-delete-product">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
        <div class="btn-block">
            <input type="submit" value="Delete" class="btn btn-default" />
            <a asp-action="ViewProducts" asp-controller="Products" class="btn-link">Back to List</a>
        </div>
    </form>
</section>
