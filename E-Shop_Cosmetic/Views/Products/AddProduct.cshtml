@model Product
<section class="admin-panel">
    <form class="form form-admin" asp-action="AddProduct" asp-controller="Products" asp-antiforgery="true">
        <h3 class="form-header">Добро пожаловать в админ панель!</h3>
        
        <div class="form-group">
            <h3>Добавить товар на страницу:</h3>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="form-group__header"></label>
            <input type="text" asp-for="Name" class="form-group__input" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-group__header"></label>
            <input asp-for="Price" class="form-group__input" />
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription" class="form-group__header"></label>
            <input type="text" asp-for="ShortDescription" class="form-group__input" />
        </div>
        <div class="form-group">
            <label asp-for="LongDescription" class="form-group__header"></label>
            <input type="text" asp-for="LongDescription" class="form-group__input" />
        </div>

        <div class="form-group">
            <label asp-for="ImageURL" class="form-group__header"></label>
            <input type="url" asp-for="ImageURL" class="form-group__input" />
        </div>
        <div class="btn-block">
            <label asp-for="CategoryId" class="btn-block__header"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="btn-block__select">
            </select>
        </div>
        <div class="btn-block">
            <input type="submit" value="Save" class="btn btn-admin"/>
        </div>
    </form>
</section>