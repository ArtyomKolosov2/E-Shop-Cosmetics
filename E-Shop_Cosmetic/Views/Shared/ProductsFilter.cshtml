@model SearchProductsParams

<section class="modal-search">
    <div class="modal-filter">
        <div class="modal-header modal-header-filter">
            <h3 class="modal-title">Фильтр</h3>
            <button class="btn-close-filter">&times;</button>
        </div>
        <form method="get" asp-action="Search" asp-controller="Products" class="form-search form-search__property" name="form_search">
            <input type="number" min="1" asp-for="SearchProductId" placeholder="Введите артикул" class="form-search__property" />
            <input type="text" asp-for="Name" placeholder="Введите название товара" class="form-search__property" />
            
            <div class="filter-cost">
                <input class="js-range-slider" value="$" />
                <span class="filter-cost__head">Цена изделия в рублях</span>
                <div class="table">
                    <div class="table-block">
                        <span>от</span>
                        <div class="table-cell">
                            <input asp-for="StartPrice" type="text" id="priceMin" class="form-control">
                        </div>
                        <span>руб</span>
                        <span class="line"></span>
                    </div>
                    <div class="table-block">
                        <span>до</span>
                        <div class="table-cell">
                            <input asp-for="EndPrice" type="text" id="priceMax" class="form-control">
                        </div>
                        <span>руб</span>
                    </div>
                </div>
                <div class="checkboxes">
                    <div class="under-order">
                        <p>По цене:</p>
                        <input asp-for="IsSortByPriceRequired" type="checkbox" class="search__under-order" />
                    </div>
                    <div class="is-available">
                        <p>В наличии:</p>
                        <input asp-for="IsAvailable" type="checkbox" class="search__is-available">
                    </div>
                </div>
                <div class="modal-filter__footer">
                    <button class="btn btn-primary">Отправить</button>
                </div>
            </div>
        </form>
    </div>
</section>