@model SearchOrderParams

<section class="modal-search">
    <div class="modal-filter">
        <div class="modal-header modal-header-filter">
            <h3 class="modal-title">Фильтр</h3>
            <button class="btn-close-filter">&times;</button>
        </div>
        <form method="get" asp-action="Search" asp-controller="Orders" class="form-search form-search__property" name="form_search">
            <input type="number" min="1" asp-for="OrderId" placeholder="id заказа" class="form-search__property" />
            <input type="text" asp-for="Name" placeholder="имя" class="form-search__property" />
            <input type="text" asp-for="LastName" placeholder="фамилия" class="form-search__property" />
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-group__input" placeholder="e-mail" />
                <span asp-validation-for="Email" />
            </div>
            <input type="text" asp-for="PhoneNumber" placeholder="телефон" class="form-search__property" />
            <div class="filter-cost">
                <div class="checkboxes">
                    <div class="under-order">
                        <p>Сортировка по дате:</p><input type="checkbox" asp-for="IsSortByDateRequired" class="search__under-order" />
                    </div>
                    <div class="is-available">
                        <p>Активный:</p>
                        <input asp-for="IsOrderActive" checked="checked" type="checkbox" class="search__is-available">
                    </div>
                </div>
                <div class="modal-filter__footer">
                    <button class="btn btn-primary">Отправить</button>
                    <button class="btn btn-cancel-filter">Очистить</button>
                </div>
            </div>
        </form>
    </div>
</section>
