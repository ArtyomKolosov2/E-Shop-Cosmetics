@model SearchOrderParams

<section class="modal-search">
    <div class="modal-filter">
        <div class="modal-header modal-header-filter">
            <h3 class="modal-title">Фильтр</h3>
            <button class="btn-close-filter">&times;</button>
        </div>
        <form method="get" asp-action="Search" asp-controller="Orders" class="form-search" name="form_search">
            <div class="form-group">
                <input type="number" min="1" asp-for="OrderId" placeholder="id заказа" class="form-group__input form-group-order__input" />
                <span asp-validation-for="OrderId"></span>
            </div>

            <div class="form-group">
                <input type="text" asp-for="Name" placeholder="Имя" class="form-group__input form-group-order__input" />
            </div>

            <div class="form-group">
                <input type="text" asp-for="LastName" class="form-group__input form-group-order__input" placeholder="Фамилия" />
            </div>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-group__input form-group-order__input" placeholder="e-mail" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <input type="text" asp-for="PhoneNumber" placeholder="телефон" class="form-group__input form-group-order__input" />
            </div>

            <div class="filter-cost" style="padding-top: 14px;">
                <div class="checkboxes">
                    <div class="under-order">
                        <p>По дате:</p><input type="checkbox" asp-for="IsSortByDateRequired" class="search__under-order" />
                    </div>
                    <div class="is-available">
                        <p>Активный:</p>
                        <input asp-for="IsOrderActive" checked="checked" type="checkbox" class="search__is-available">
                    </div>
                </div>
                <div class="modal-filter__footer">
                    <button class="btn btn-primary">Отправить</button>
                </div>
            </div>
        </form>
    </div>
</section>
