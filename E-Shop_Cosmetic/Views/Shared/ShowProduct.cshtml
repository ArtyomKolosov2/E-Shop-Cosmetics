@model E_Shop_Cosmetic.Data.Models.Product

<a class="wow flipInX" data-wow-duration="2s" asp-action="Product" asp-controller="Products" asp-route-id="@Model.Id">

    <img src="@Model.ImageURL" alt="NoImage" class="card-image">
    <div class="text">
        
        <!-- /cards -->
        <div class="card-info">
            <div class="card-info__name">
                <h3>@Model.Name</h3>
            </div>
            <div class="price" style="color: #FA842A">
                @Model.Price
            </div>
            <div class="category">
                @Model.Category.CategoryName
            </div>
        </div>
    </div>
</a>