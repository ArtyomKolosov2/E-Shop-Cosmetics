@model ViewOrderViewModel
<code id="id_product" style="display:none">@Model.Order.Id</code>

<section class="product">
    <div class="container">
        @await Html.PartialAsync("ShowOrder", Model.Order)
        <section class="row mt-5 mb-2">
            <div class="cards">
            @{
                foreach (var detail in Model.Order.OrderDetails)
                {
                    @await Html.PartialAsync("ShowOrderDetail", detail)
                }
            }
            </div>
        </section>
        @if (User.IsInRole("admin"))
        {
            <section>
                <h3 class="order__title">Хотите что-нибудь поменять?</h3>
                <div class="btn-block">
                    <a href="/Orders/UpdateOrder/@Model.Order.Id">
                        <button class="btn btn-primary">
                            <p class="btn-text">Изменить</p>
                        </button>
                    </a>
                </div>
            </section>
        }
    </div>
</section>
