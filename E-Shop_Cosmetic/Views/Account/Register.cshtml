@model  E_Shop_Cosmetic.ViewModels.RegisterViewModel

<section class="register">
    <div class="container">
        <form class="form form-login" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-header">
                <h3>Регистрация</h3>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Email">Введите Email</label><br />
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
                    <input asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-footer">
                <input type="submit" value="Регистрация" />
            </div>
        </form>
    </div>
</section>