@model  E_Shop_Cosmetic.ViewModels.RegisterViewModel

<section class="register">
    <div class="container">
        <form class="form form-login" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation validation-fix" asp-validation-summary="ModelOnly"></div>
            <div class="form-header">
                <h3>Регистрация</h3>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Email" class="email">Введите Email</label><br />
                    <input type="text" asp-for="Email" placeholder="user@gmail.com"/>
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="password">Введите пароль</label><br />
                    <input asp-for="Password" placeholder="*********"/>
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="repeat-password">Повторите пароль</label><br/>
                    <input asp-for="ConfirmPassword" placeholder="*********"/>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-footer">
                <input type="submit" class="btn btn-outline-dark" value="Регистрация" />
            </div>
        </form>
    </div>
</section>