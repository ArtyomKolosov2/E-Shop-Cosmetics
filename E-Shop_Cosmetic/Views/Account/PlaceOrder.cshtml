@model E_Shop_Cosmetic.ViewModels.OrderViewModel

<section class="order">
    <div class="container">
        <form class="form form-login" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation validation-fix" asp-validation-summary="ModelOnly"></div>
            <div class="form-header">
                <h3>Регистрация</h3>
            </div>
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Address">Введите Adress</label><br />
                    <input type="text" asp-for="Address" placeholder="г.Москва ул Ленина 77" />
                    <span asp-validation-for="Address" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Введите телефон</label><br />
                    <input asp-for="Phone" placeholder="*********" />
                    <span asp-validation-for="Phone" />
                </div>
                <div class="form-group">
                    <label asp-for="Wish">Введите ваши пожелания</label><br />
                    <input asp-for="Wish" class="" placeholder="Некоторый текст" />
                    <span asp-validation-for="Wish" />
                </div>
            </div>
            <div class="form-footer">
                <input type="submit" class="btn btn-outline-dark" value="Заказать" />
            </div>
        </form>
    </div>
</section>